                                            "type": "string"
                                        },
                                        "port": {
                                            "$schema": "http://json-schema.org/draft-07/schema",
                                            "description": "Port number",
                                            "maximum": 65535,
                                            "minimum": 0,
                                            "title": "Network Port",
                                            "type": "integer"
                                        },
                                        "protocol": {
                                            "enum": [
                                                "tcp",
                                                "udp"
                                            ],
                                            "title": "Network Protocol",
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "arn",
                                        "port",
                                        "protocol"
                                    ],
                                    "type": "object"
                                }
                            },
