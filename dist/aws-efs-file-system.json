        "specs": {
            "properties": {
                "aws": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "",
                    "properties": {
                        "region": {
                            "$schema": "http://json-schema.org/draft-07/schema",
                            "description": "AWS Region to provision in.",
