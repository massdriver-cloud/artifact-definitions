{
  "$md": {
    "importing": {
      "group": "data"
    },
    "name": "gcp-cloud-function"
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "description": "GCP Cloud Function",
  "properties": {
    "data": {
      "additionalProperties": false,
      "properties": {
        "infrastructure": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "additionalProperties": false,
          "description": "Cloud Function infrastructure configuration",
          "properties": {
            "function_url": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "URL of Cloud Function",
              "examples": [
                "https://example.com/some/path",
                "https://massdriver.cloud"
              ],
              "pattern": "^https://.*$",
              "title": "HTTPS URL",
              "type": "string"
            },
            "name": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "Name of Cloud Function",
              "examples": [
                "my-cloud-function",
                "my-sql-instance"
              ],
              "maxLength": 63,
              "message": {
                "pattern": "Name must be lowercase alphanumeric (a-z and 0-9) with dashes (-) between words. It must start with a letter and it must end with a letter or number."
              },
              "minLength": 1,
              "pattern": "^[a-z]+[-a-z0-9]+[a-z0-9]+$",
              "title": "Name",
              "type": "string"
            }
          },
          "required": [
            "name"
          ],
          "title": "GCP infrastructure config",
          "type": "object"
        },
        "security": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "additionalProperties": false,
          "description": "GCP Security Configuration",
          "properties": {
            "iam": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "additionalProperties": false,
              "description": "IAM Roles And Conditions",
              "patternProperties": {
                "^[a-z]+[a-z_]*[a-z]$": {
                  "properties": {
                    "condition": {
                      "description": "GCP IAM Condition",
                      "title": "Condition",
                      "type": "string"
                    },
                    "role": {
                      "description": "GCP Role",
                      "examples": [
                        "roles/owner",
                        "roles/redis.editor",
                        "roles/storage.objectCreator",
                        "roles/storage.legacyObjectReader"
                      ],
                      "message": {
                        "pattern": "Must be a valid GCP Role, e.g. roles/..."
                      },
                      "pattern": "^roles/[a-zA-Z0-9\\.]+$",
                      "title": "Role"
                    }
                  },
                  "required": [
                    "role",
                    "condition"
                  ],
                  "type": "object"
                }
              },
              "title": "IAM",
              "type": "object"
            }
          },
          "required": [],
          "title": "Security",
          "type": "object"
        }
      },
      "required": [
        "infrastructure",
        "security"
      ],
      "title": "Artifact Data",
      "type": "object"
    },
    "specs": {
      "properties": {
        "gcp": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "description": "",
          "properties": {
            "project": {
              "title": "GCP Project",
              "type": "string"
            },
            "region": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "The GCP region to provision resources in.",
              "examples": [
                "us-east1",
                "us-east4",
                "us-west1",
                "us-west2",
                "us-west3",
                "us-west4",
                "us-central1"
              ],
              "title": "Region",
              "type": "string"
            }
          },
          "required": [],
          "title": "GCP Artifact Specs",
          "type": "object"
        }
      },
      "title": "Artifact Specs",
      "type": "object"
    }
  },
  "required": [
    "data",
    "specs"
  ],
  "title": "GCP Cloud Function",
  "type": "object"
}
