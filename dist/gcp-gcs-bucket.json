{
    "$md": {
        "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/gcp/cloud-storage.svg",
        "importing": {
            "group": "data"
        },
        "name": "gcp-gcs-bucket"
    },
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "GCP Google Cloud Storage Bucket",
    "properties": {
        "data": {
            "properties": {
                "infrastructure": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "Google Cloud Storage Bucket",
                    "properties": {
                        "id": {
                            "description": "The Globally Unique ID of the GCS Bucket",
                            "examples": [
                                "one",
                                "dash-bucket",
                                "snake_bucket",
                                "domain.type.bucket",
                                "1also-valid2"
                            ],
                            "message": {
                                "pattern": "The GCS Bucket ID must follow these guidelines: https://cloud.google.com/storage/docs/naming-buckets"
                            },
                            "pattern": "^[a-z0-9]+[a-z0-9-_.]{1,61}[a-z0-9]+$",
                            "title": "GCS Bucket ID",
                            "type": "string"
                        }
                    },
                    "required": [
                        "id"
                    ],
                    "title": "GCP Bucket",
                    "type": "object"
                },
                "security": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "GCP Security Configuration",
                    "properties": {
                        "iam": {
                            "$schema": "http://json-schema.org/draft-07/schema",
                            "description": "IAM Roles And Conditions",
                            "patternProperties": {
                                "^[a-z]+[a-z_]*[a-z]$": {
                                    "properties": {
                                        "condition": {
                                            "description": "GCP IAM Condition",
                                            "title": "Condition",
                                            "type": "string"
                                        },
                                        "role": {
                                            "description": "GCP Role",
                                            "examples": [
                                                "roles/owner",
                                                "roles/redis.editor",
                                                "roles/storage.objectCreator",
                                                "roles/storage.legacyObjectReader"
                                            ],
                                            "message": {
                                                "pattern": "Must be a valid GCP Role, e.g. roles/..."
                                            },
                                            "pattern": "^roles/[a-zA-Z0-9\\.]+$",
                                            "title": "Role"
                                        }
                                    },
                                    "required": [
                                        "role",
                                        "condition"
                                    ],
                                    "type": "object"
                                }
                            },
                            "title": "IAM",
                            "type": "object"
                        }
                    },
                    "required": [],
                    "title": "Security",
                    "type": "object"
                }
            },
            "required": [
                "infrastructure",
                "security"
            ],
            "title": "Artifact Data",
            "type": "object"
        },
        "specs": {
            "additionalProperties": true,
            "type": "object"
        }
    },
    "required": [
        "data"
    ],
    "title": "GCS Bucket",
    "type": "object"
}
