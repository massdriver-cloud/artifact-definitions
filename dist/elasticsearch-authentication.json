{
    "$md": {
        "name": "elasticsearch-authentication"
    },
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Elasticsearch cluster authentication and cloud-specific configuration.",
    "properties": {
        "data": {
            "properties": {
                "authentication": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "Elasticsearch connection string",
                    "properties": {
                        "hostname": {
                            "type": "string"
                        },
                        "password": {
                            "$md.sensitive": true,
                            "type": "string"
                        },
                        "port": {
                            "$schema": "http://json-schema.org/draft-07/schema",
                            "description": "Port number",
                            "maximum": 65535,
                            "minimum": 0,
                            "title": "Port",
                            "type": "integer"
                        },
                        "username": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "username",
                        "password",
                        "hostname",
                        "port"
                    ],
                    "title": "Elasticsearch Authentication"
                },
                "infrastructure": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "",
                    "properties": {
                        "kubernetes_namespace": {
                            "type": "string"
                        },
                        "kubernetes_service": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "kubernetes_namespace"
                    ],
                    "title": "Kuberenetes infrastructure config",
                    "type": "object"
                }
            },
            "required": [
                "infrastructure",
                "authentication"
            ],
            "type": "object"
        },
        "specs": {
            "additionalProperties": true,
            "type": "object"
        }
    },
    "required": [
        "data"
    ],
    "title": "Elasticsearch Cluster",
    "type": "object"
}
