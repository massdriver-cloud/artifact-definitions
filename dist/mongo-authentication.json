{
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/oss/mongo.svg",
    "name": "mongo-authentication"
  },
  "$schema": "http://json-schema.org/draft-07/schema",

  "description": "mongo cluster authentication and cloud-specific configuration.",
  "properties": {
    "data": {
      "properties": {
        "authentication": {
          "$schema": "http://json-schema.org/draft-07/schema",

          "description": "Mongo connection string",
          "properties": {
            "hostname": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "port": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "Port number",
              "maximum": 65535,
              "minimum": 0,
              "title": "Port",
              "type": "integer"
            },
            "username": {
              "type": "string"
            }
          },
          "required": ["username", "password", "hostname", "port"],
          "title": "Mongo Authentication"
        },
        "infrastructure": {
          "description": "Mongo cluster infrastructure configuration.",
          "oneOf": [
            {
              "$schema": "http://json-schema.org/draft-07/schema",

              "description": "",
              "properties": {
                "kubernetes_namespace": {
                  "type": "string"
                },
                "kubernetes_service": {
                  "type": "string"
                }
              },
              "required": ["kubernetes_namespace"],
              "title": "Kuberenetes infrastructure config",
              "type": "object"
            },
            {
              "$schema": "http://json-schema.org/draft-07/schema",

              "description": "Minimal Azure Infrastructure Config",
              "properties": {
                "ari": {
                  "$schema": "http://json-schema.org/draft-07/schema",
                  "description": "Azure Resource ID",
                  "examples": [
                    "/subscriptions/12345678-1234-1234-abcd-1234567890ab/resourceGroups/resource-group-name/providers/Microsoft.Network/virtualNetworks/network-name"
                  ],
                  "message": {
                    "pattern": "Must be a valid Azure Resource ID"
                  },
                  "pattern": "^/subscriptions/[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}/resource(g|G)roups/[a-zA-Z0-9-_.()]{0,89}[a-zA-Z0-9-_()]/providers/Microsoft\\.[a-zA-Z]+/[a-zA-Z]+(?:/[a-zA-Z0-9-_.()]+)+$",
                  "title": "Azure Resource ID",
                  "type": "string"
                }
              },
              "required": ["ari"],
              "title": "Azure Infrastructure Resource ID",
              "type": "object"
            },
            {
              "$schema": "http://json-schema.org/draft-07/schema",

              "description": "Minimal MongoDB Atlas cluster infrastructure config",
              "properties": {
                "cluster_id": {
                  "type": "string"
                },
                "project_id": {
                  "type": "string"
                }
              },
              "required": ["project_id", "cluster_id"],
              "title": "MongoDB Atlas Cluster Infrastructure",
              "type": "object"
            }
          ],
          "title": "Mongo Cluster Infrastructure",
          "type": "object"
        }
      },
      "required": ["infrastructure", "authentication"],
      "type": "object"
    },
    "specs": {
      "properties": {
        "aws": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "description": "",
          "properties": {
            "region": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "AWS Region to provision in.",
              "examples": ["us-west-2"],
              "title": "Region",
              "type": "string"
            }
          },
          "required": [],
          "title": "AWS Artifact Specs",
          "type": "object"
        },
        "azure": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "description": "",
          "properties": {
            "region": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "Select the Azure region you'd like to provision your resources in.",
              "title": "Azure Region",
              "type": "string"
            }
          },
          "required": ["region"],
          "title": "Azure Artifact Specs",
          "type": "object"
        },
        "gcp": {
          "$schema": "http://json-schema.org/draft-07/schema",
          "description": "",
          "properties": {
            "project": {
              "title": "GCP Project",
              "type": "string"
            },
            "region": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "description": "The GCP region to provision resources in.",
              "examples": [
                "us-east1",
                "us-east4",
                "us-west1",
                "us-west2",
                "us-west3",
                "us-west4",
                "us-central1"
              ],
              "title": "Region",
              "type": "string"
            }
          },
          "required": [],
          "title": "GCP Artifact Specs",
          "type": "object"
        },
        "mongo": {
          "$schema": "http://json-schema.org/draft-07/schema",

          "description": "Informs downstream bundles of Mongo specific data",
          "properties": {
            "version": {
              "description": "Currently deployed Mongo version",
              "title": "Version number of cluster",
              "type": "string"
            }
          },
          "required": ["version"],
          "title": "Mongo specific public information",
          "type": "object"
        }
      },
      "required": ["mongo"],
      "type": "object"
    }
  },
  "required": ["data"],
  "title": "mongo Cluster",
  "type": "object"
}
