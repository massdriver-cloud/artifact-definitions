{
    "$md": {
        "export": [],
        "icon": "https://raw.githubusercontent.com/massdriver-cloud/artifact-definitions/refs/heads/main/definitions/artifacts/azure-service-principal/icon.png",
        "label": "Azure Service Principal",
        "name": "azure-service-principal",
        "ui": {
            "connectionOrientation": "environmentDefault",
            "environmentDefaultGroup": "credentials",
            "instructions": [
                {
                    "content": "",
                    "label": "Azure CLI"
                },
                {
                    "content": "",
                    "label": "Azure Console"
                }
            ]
        }
    },
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "",
    "properties": {
        "data": {
            "description": "Enter your Azure service principal authentication details",
            "properties": {
                "client_id": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "The application (client) ID of your Azure service principal. This is also called the Application ID.",
                    "examples": [
                        "123xyz99-ab34-56cd-e7f8-456abc1q2w3e"
                    ],
                    "format": "uuid",
                    "title": "Client ID (Application ID)",
                    "type": "string"
                },
                "client_secret": {
                    "$md.sensitive": true,
                    "description": "The secret value (password) for your Azure service principal. This is created when you generate a client secret in Azure AD.",
                    "message": {
                        "pattern": "Not a valid Client Secret."
                    },
                    "pattern": "[-_.~a-zA-Z0-9]{1,40}",
                    "title": "Client Secret",
                    "type": "string"
                },
                "subscription_id": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "The Azure subscription ID where Massdriver will provision and manage your infrastructure",
                    "examples": [
                        "123xyz99-ab34-56cd-e7f8-456abc1q2w3e"
                    ],
                    "format": "uuid",
                    "title": "Azure Subscription ID",
                    "type": "string"
                },
                "tenant_id": {
                    "$schema": "http://json-schema.org/draft-07/schema",
                    "description": "The Azure Active Directory tenant ID (also called Directory ID) where your service principal is registered",
                    "examples": [
                        "123xyz99-ab34-56cd-e7f8-456abc1q2w3e"
                    ],
                    "format": "uuid",
                    "title": "Azure Tenant ID",
                    "type": "string"
                }
            },
            "required": [
                "client_id",
                "tenant_id",
                "client_secret",
                "subscription_id"
            ],
            "title": "Azure Service Principal Credentials",
            "type": "object"
        }
    },
    "required": [
        "data"
    ],
    "title": "Azure Service Principal",
    "type": "object"
}
