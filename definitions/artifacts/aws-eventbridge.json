{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/aws/arch-amazon-eventbridge.svg",
    "name": "aws-eventbridge"
  },
  "type": "object",
  "title": "AWS EventBridge",
  "description": "Connection details for EventBridge event bus",
  "required": ["data", "specs"],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": ["infrastructure"],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure",
          "required": ["arn"],
          "type": "object",
          "properties": {
            "arn": {
              "$ref": "../types/aws-arn.json"
            }
          }
        },
        "security": {
          "$ref": "../types/aws-security.json"
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "aws": {
          "$ref": "../specs/aws.json"
        }
      }
    }
  }
}
