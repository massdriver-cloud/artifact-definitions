{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.massdriver.cloud/artifact-definitions/massdriver/azure-virtual-network.json",
  "$md": {
    "access": "public",
    "defaultTargetConnectionGroup": "networking",
    "defaultTargetConnectionGroupLabel": "Azure",
    "importing": {
      "group": "networking"
    }
  },
  "type": "object",
  "title": "Azure Virtual Network",
  "description": "",
  "additionalProperties": false,
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure"
      ],
      "properties": {
        "observability": {
          "title": "Observability configuration",
          "type": "object",
          "properties": {
            "alarm_monitor_action_group_ari": {
              "$ref": "../types/azure-resource-id.json"
            }
          }
        },
        "infrastructure": {
          "title": "Infrastructure configuration",
          "required": [
            "vnet_id",
            "cidr",
            "default_subnet_id",
            "delegated_subnets"
          ],
          "type": "object",
          "properties": {
            "vnet_id": {
              "$ref": "../types/azure-resource-id.json"
            },
            "cidr": {
              "$ref": "../types/cidr.json"
            },
            "default_subnet_id": {
              "$ref": "../types/azure-resource-id.json"
            },
            "delegated_subnets": {
              "type": "object",
              "title": "Delegated subnets",
              "description": "Map of subnet",
              "propertyNames": {
                "pattern": "^Microsoft\\.[a-zA-Z]*\/[a-zA-Z]*$"
              },
              "patternProperties": {
                "^Microsoft\\.[a-zA-Z]*\/[a-zA-Z]*$": {
                  "type": "object",
                  "required": [
                    "subnet_id"
                  ],
                  "properties": {
                    "subnet_id": {
                      "$ref": "../types/azure-resource-id.json"
                    },
                    "private_dns_zone_id": {
                      "$ref": "../types/azure-resource-id.json"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "azure": {
          "$ref": "../specs/azure.json"
        }
      }
    }
  }
}
