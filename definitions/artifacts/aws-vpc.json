{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "ui":{
      "environmentDefaultGroup": "networking"
    },
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/aws/arch-amazon-virtual-private-cloud.svg",
    "name": "aws-vpc",
    "label": "AWS VPC"
  },
  "type": "object",
  "title": "AWS Virtual Private Cloud",
  "description": "",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure"
      ],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure configuration",
          "required": [
            "arn",
            "cidr",
            "private_subnets",
            "public_subnets",
            "internal_subnets"
          ],
          "type": "object",
          "properties": {
            "arn": {
              "$ref": "../types/aws-arn.json"
            },
            "cidr": {
              "$ref": "../types/cidr.json"
            },
            "private_subnets": {
              "type": "array",
              "items": {
                "$ref": "../types/aws-subnet.json"
              }
            },
            "public_subnets": {
              "type": "array",
              "items": {
                "$ref": "../types/aws-subnet.json"
              }
            },
            "internal_subnets": {
              "type": "array",
              "items": {
                "$ref": "../types/aws-subnet.json"
              }
            }
          }
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "aws": {
          "$ref": "../specs/aws.json"
        }
      }
    }
  }
}
