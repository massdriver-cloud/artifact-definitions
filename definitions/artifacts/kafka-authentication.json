{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/oss/kafka.svg",
    "importing": {
      "group": "data"
    },
    "name": "kafka-authentication"
  },
  "type": "object",
  "title": "AWS MSK Cluster",
  "description": "Highly scalable event bus managed by AWS.",
  "required": ["data", "specs"],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": ["infrastructure", "authentication", "security"],
      "properties": {
        "infrastructure": {
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-arn.json"
            }
          ]
        },
        "authentication": {
          "$ref": "../types/kafka-authentication.json"
        },
        "security": {
          "oneOf": [
            {
              "$ref": "../types/aws-security.json"
            }
          ]
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "required": ["kafka"],
      "properties": {
        "kafka": {
          "$ref": "../specs/kafka.json"
        },
        "aws": {
          "$ref": "../specs/aws.json"
        },
        "azure": {
          "$ref": "../specs/azure.json"
        },
        "gcp": {
          "$ref": "../specs/gcp.json"
        }
      }
    }
  }
}
