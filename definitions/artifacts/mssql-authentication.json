{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/azure/sql-server.svg",
    "importing": {
      "group": "data"
    },
    "name": "mssql-authentication"
  },
  "type": "object",
  "title": "MSSQL Authentication",
  "description": "Authentication parameters for a MSSQL database",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "infrastructure",
        "authentication",
        "security"
      ],
      "properties": {
        "security": {
          "title": "Security details",
          "description": "TBD",
          "type": "object",
          "anyOf": [
            {
              "$ref": "../types/aws-security.json"
            },
            {
              "$ref": "../types/azure-security.json"
            },
            {
              "$ref": "../types/gcp-security.json"
            }
          ]
        },
        "infrastructure": {
          "title": "Cloud provider details",
          "description": "Cloud specific MSSQL configuration data.",
          "type": "object",
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-arn.json"
            },
            {
              "$ref": "../types/azure-infrastructure-ari.json"
            },
            {
              "$ref": "../types/gcp-infrastructure-name.json"
            }
          ]
        },
        "authentication": {
          "title": "Authentication details",
          "type": "object",
          "required": [
            "username",
            "password",
            "hostname",
            "port"
          ],
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string",
              "$md.sensitive": true
            },
            "hostname": {
              "type": "string"
            },
            "port": {
              "$ref": "../types/port.json"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
