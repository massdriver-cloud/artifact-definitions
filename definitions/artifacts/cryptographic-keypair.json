{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "name": "keypair"
  },
  "type": "object",
  "title": "Keypair",
  "description": "Public and Private cryptographic keys commonly used for encryption and authentication",
  "additionalProperties": false,
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "infrastructure",
        "authentication"
      ],
      "properties": {
        "infrastructure": {
          "title": "Cloud provider configuration",
          "type": "object",
          "required": [
            "hostname"
          ],
          "properties": {
            "hostname": {
              "title": "Hostname",
              "type": "string"
            }
          }
        },
        "authentication": {
          "title": "Authentication configuration",
          "type": "object",
          "required": [
            "private_key",
            "public_key"
          ],
          "properties": {
            "private_key": {
              "type": "string"
            },
            "public_key": {
              "type": "string"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "properties": {
        "encryption": {
          "$ref": "../specs/encryption.json"
        }
      }
    }
  }
}
