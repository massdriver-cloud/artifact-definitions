{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "label": "GCP Service Account",
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/artifact-definitions/refs/heads/main/definitions/artifacts/gcp-service-account/icon.png",
    "containerRepositories": {
      "label": "GAR",
      "cloud": "gcp"
    },
    "name": "gcp-service-account",
    "ui": {
      "environmentDefaultGroup": "credentials",
      "connectionOrientation": "environmentDefault",
      "instructions": [
        {
          "label": "Google Cloud Console",
          "content": ""
        },
        {
          "label": "Google Cloud CLI",
          "content": ""
        }
      ]
    },
    "export": [

    ]
  },
  "type": "object",
  "title": "GCP Service Account",
  "description": "GCP Service Account",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "title": "GCP Service Account Credentials",
      "description": "Upload your GCP service account JSON key file or enter the credentials manually. These values come from the JSON key file you download from Google Cloud Console.",
      "type": "object",
      "required": [
        "auth_provider_x509_cert_url",
        "auth_uri",
        "client_email",
        "client_id",
        "client_x509_cert_url",
        "private_key",
        "private_key_id",
        "project_id",
        "token_uri",
        "type"
      ],
      "properties": {
        "auth_provider_x509_cert_url": {
          "title": "OAuth2 Certificate URL",
          "description": "URL for Google's OAuth2 certificate provider. Usually left as default unless using a custom endpoint.",
          "default": "https://www.googleapis.com/oauth2/v1/certs",
          "$ref": "../types/https-url.json"
        },
        "auth_uri": {
          "title": "OAuth2 Authorization URI",
          "description": "Google OAuth2 authorization endpoint. Usually left as default unless using a custom endpoint.",
          "default": "https://accounts.google.com/o/oauth2/auth",
          "$ref": "../types/https-url.json"
        },
        "client_email": {
          "title": "Service Account Email",
          "description": "The email address of your GCP service account (e.g., my-service-account@my-project.iam.gserviceaccount.com)",
          "$ref": "../types/email.json"
        },
        "client_id": {
          "type": "string",
          "title": "Client ID",
          "description": "The unique identifier for your service account. Found in your service account JSON key file."
        },
        "client_x509_cert_url": {
          "title": "Service Account Certificate URL",
          "description": "URL to the X.509 certificate for this service account. Used for certificate-based authentication.",
          "$ref": "../types/https-url.json"
        },
        "private_key": {
          "type": "string",
          "title": "Private Key",
          "description": "The private key for your service account. This is a sensitive value that should be kept secure. Found in your service account JSON key file.",
          "$md.sensitive": true
        },
        "private_key_id": {
          "type": "string",
          "title": "Private Key ID",
          "description": "The unique identifier for the private key associated with this service account."
        },
        "project_id": {
          "type": "string",
          "title": "GCP Project ID",
          "description": "The Google Cloud Platform project ID where this service account belongs and where Massdriver will provision infrastructure."
        },
        "token_uri": {
          "title": "OAuth2 Token URI",
          "description": "Google OAuth2 token endpoint. Usually left as default unless using a custom endpoint.",
          "default": "https://oauth2.googleapis.com/token",
          "$ref": "../types/https-url.json"
        },
        "type": {
          "type": "string",
          "title": "Credential Type",
          "description": "The type of credential. Should be 'service_account' for service account keys.",
          "default": "service_account"
        }
      }
    }
  }
}
