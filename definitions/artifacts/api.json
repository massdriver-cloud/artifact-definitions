{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "name": "api"
  },
  "type": "object",
  "title": "API / Web Service",
  "description": "An arbitrary API.",
  "additionalProperties": false,
  "required": ["data", "specs"],
  "properties": {
    "data": {
      "type": "object",
      "required": ["api"],
      "properties": {
        "etc": {
          "additionalProperties": true,
          "type": "object",
          "description": "This field can be used to store arbitrary data to pass to downstream services."
        },
        "api": {
          "required": ["hostname", "port"],
          "type": "object",
          "properties": {
            "hostname": {
              "type": "string",
              "description": "Service host name. If a second host name is needed for internal vs external access, a second artifact is recommended."
            },
            "port": {
              "$ref": "../types/port.json"
            },
            "protocol": {
              "type": "string",
              "description": "API protocol"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["api"],
      "properties": {
        "api": {
          "type": "object",
          "description": "API specifications",
          "required": ["version"],
          "properties": {
            "version": {
              "type": "string",
              "description": "API Version"
            }
          }
        },
        "aws": {
          "$ref": "../specs/aws.json"
        },
        "gcp": {
          "$ref": "../specs/gcp.json"
        },
        "azure": {
          "$ref": "../specs/azure.json"
        }
      }
    }
  }
}
