{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "name": "azure-storage-account"
  },
  "type": "object",
  "title": "Azure Storage Account",
  "description": "",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure",
        "authentication",
        "security"
      ],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure configuration",
          "type": "object",
          "required": [
            "ari"
          ],
          "properties": {
            "ari": {
              "$ref": "../types/azure-resource-id.json"
            }
          }
        },
        "authentication": {
          "title": "Authentication credentials",
          "type": "object",
          "required": [
            "endpoint"
          ],
          "properties": {
            "endpoint": {
              "$ref": "../types/azure-storage-account-endpoint.json"
            },
            "connection_string": {
              "type": "string",
              "$comment": "This field is deprecated, please define policies in app.policies to have the correct roles assigned to your identity."
            }
          }
        },
        "security": {
          "$ref": "../types/azure-security.json"
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "azure": {
          "$ref": "../specs/azure.json"
        }
      }
    }
  }
}
