{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "label": "Azure Service Principal",
    "ui": {
      "environmentDefaultGroup": "credentials",
      "connectionOrientation": "environmentDefault"
    },
    "importing": {
      "group": "authentication"
    },
    "cloud": {
      "id": "azure"
    },
    "dnsZones": {
      "label": "Azure DNS",
      "cloud": "azure"
    },
    "extensions": {
      "costReporting": true
    },
    "name": "azure-service-principal",
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/artifact-definitions/refs/heads/main/definitions/artifacts/azure-service-principal/icon.png",
    "export": [

    ]
  },
  "type": "object",
  "title": "Azure Service Principal",
  "description": "",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "client_id",
        "tenant_id",
        "client_secret",
        "subscription_id"
      ],
      "properties": {
        "tenant_id": {
          "type": "string",
          "title": "Tenant ID",
          "$ref": "../types/uuid.json"
        },
        "client_id": {
          "type": "string",
          "title": "Client ID",
          "$ref": "../types/uuid.json"
        },
        "client_secret": {
          "type": "string",
          "title": "Client Secret",
          "pattern": "[-_.~a-zA-Z0-9]{1,40}",
          "message": {
            "pattern": "Not a valid Client Secret."
          }
        },
        "subscription_id": {
          "type": "string",
          "title": "Subscription ID",
          "$ref": "../types/uuid.json"
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
      }
    }
  }
}
