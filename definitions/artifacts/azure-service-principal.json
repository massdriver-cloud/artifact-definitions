{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.massdriver.cloud/artifact-definitions/massdriver/azure-service-principal.json",
  "$md": {
    "access": "public",
    "defaultTargetConnectionGroup": "credentials",
    "defaultTargetConnectionGroupLabel": "Azure",
    "importing": {
      "group": "authentication"
    },
    "diagram": {
      "isLinkable": false
    },
    "containerRepositories": {
      "label": "ACR",
      "cloud": "Azure"
    }
  },
  "type": "object",
  "title": "Azure Service Principal",
  "description": "",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "client_id",
        "tenant_id",
        "client_secret",
        "subscription_id"
      ],
      "properties": {
        "tenant_id": {
          "type": "string",
          "title": "Tenant ID",
          "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$",
          "message": {
            "pattern": "Must be a valid Azure Tenant ID"
          }
        },
        "client_id": {
          "type": "string",
          "title": "Client ID",
          "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$",
          "message": {
            "pattern": "Must be a valid Azure App Client ID"
          }
        },
        "client_secret": {
          "type": "string",
          "title": "Client Secret",
          "pattern": "^[a-zA-Z0-9~.-]{40}$",
          "message": {
            "pattern": "Must be a valid Azure App Client Secret"
          }
        },
        "subscription_id": {
          "type": "string",
          "title": "Subscription ID",
          "pattern": "^[a-z0-9]{8}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{4}-[a-z0-9]{12}$",
          "message": {
            "pattern": "Must be a valid Azure Subscription ID"
          }
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {}
    }
  }
}
