# Liquid template for exporting an artifact to kube config YAML
apiVersion: v1
clusters:
  - cluster:
      certificate-authority-data: {{ artifact.data.authentication.cluster.certificate-authority-data }}
      server: {{ artifact.data.authentication.cluster.server }}
    name: {{ artifact.id }}
contexts:
  - context:
      cluster: {{ artifact.id }}
      user: {{ artifact.id }}
    name: {{ artifact.id }}
current-context: {{ artifact.id }}
kind: Config
preferences: {}
users:
  - name: {{ artifact.id }}
    user:
      token: {{ artifact.data.authentication.user.token }}
