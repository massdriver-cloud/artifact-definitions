{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://api.massdriver.cloud/artifact-definitions/massdriver/gcp-subnetwork.json",
  "$md": {
    "access": "public",
    "defaultTargetConnectionGroup": "networking",
    "defaultTargetConnectionGroupLabel": "GCP",
    "importing": {
      "group": "networking"
    }
  },
  "type": "object",
  "title": "GCP Subnetwork",
  "description": "A region-bound network for deploying GCP resources",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure"
      ],
      "properties": {
        "observability": {
          "title": "Observability configuration",
          "type": "object",
          "properties": {
            "alarm_notification_channel_grn": {
              "type": "string",
              "title": "Alarm Notification Channel GRN",
              "description": "Alarm Notification Channel GRN",
              "examples": [
                "projects/my-project/notificationChannels/0009999999999999111"
              ],
              "pattern": "^projects\/[a-z0-9-]+\/notificationChannels\/[0-9]+$",
              "message": {
                "pattern": "The provided GRN does not follow the expected pattern. See the examples for valid GRNs."
              }
            }
          }
        },
        "infrastructure": {
          "title": "Infrastructure configuration",
          "required": [
            "grn",
            "cidr",
            "gcp_global_network_grn"
          ],
          "type": "object",
          "properties": {
            "grn": {
              "$ref": "../types/gcp-grn.json"
            },
            "cidr": {
              "$ref": "../types/cidr.json"
            },
            "gcp_global_network_grn": {
              "$ref": "../types/gcp-grn.json"
            }
          }
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "gcp": {
          "$ref": "../specs/gcp.json"
        }
      }
    }
  }
}
