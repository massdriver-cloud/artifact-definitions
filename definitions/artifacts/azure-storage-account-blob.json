{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "name": "azure-storage-account-blob"
  },
  "type": "object",
  "title": "Azure Blob Storage Account",
  "description": "",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure",
        "security"
      ],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure configuration",
          "type": "object",
          "required": [
            "ari",
            "endpoint"
          ],
          "properties": {
            "ari": {
              "$ref": "../types/azure-resource-id.json"
            },
            "endpoint": {
              "$ref": "../types/azure-storage-account-endpoint.json"
            }
          }
        },
        "security": {
          "iam": {
            "type": "object",
            "required": [
              "role",
              "scope"
            ],
            "properties": {
              "role": {
                "title": "Role",
                "description": "Azure Role",
                "pattern": "^[a-zA-Z ]+$",
                "message": {
                  "pattern": "Must be a valid Azure Role (uppercase, lowercase letters and spaces)"
                },
                "examples": [
                  "Storage Blob Data Reader"
                ]
              },
              "scope": {
                "title": "Scope",
                "description": "Azure IAM Scope",
                "type": "string"
              }
            }
          },
          "sas": {
            "type": "object",
            "properties": {
              "token": {
                "title": "SAS Token",
                "description": "Azure SAS Token",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "azure": {
          "$ref": "../specs/azure.json"
        }
      }
    }
  }
}
