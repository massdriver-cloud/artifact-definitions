{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/azure/storage-accounts.svg",
    "name": "azure-storage-account-blob"
  },
  "type": "object",
  "title": "Azure Blob Storage Account",
  "description": "",

  "required": ["data", "specs"],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": ["infrastructure", "security"],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure configuration",
          "type": "object",
          "required": ["ari", "endpoint"],
          "properties": {
            "ari": {
              "$ref": "../types/azure-resource-id.json"
            },
            "endpoint": {
              "$ref": "../types/azure-storage-account-endpoint.json"
            }
          }
        },
        "authentication": {
          "title": "Authentication configuration",
          "type": "object",
          "required": ["sas_token"],
          "properties": {
            "sas_token": {
              "title": "SAS Token",
              "type": "string"
            }
          }
        },
        "security": {
          "$ref": "../types/azure-security.json"
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "azure": {
          "$ref": "../specs/azure.json"
        }
      }
    }
  }
}
