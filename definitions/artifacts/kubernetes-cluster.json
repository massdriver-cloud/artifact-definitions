{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "defaultTargetConnectionGroup": "credentials",
    "defaultTargetConnectionGroupLabel": "Kubernetes Cluster",
    "export": [
      {
        "downloadButtonText": "Kube Config",
        "fileFormat": "yaml",
        "template": "",
        "templateLang": "liquid"
      }
    ],
    "name": "kubernetes-cluster",
    "ui": {
      "instructions": [
        {
          "label": "kubectl CLI",
          "content": ""
        }
      ]
    },
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/artifact-definitions/refs/heads/main/definitions/artifacts/kubernetes-cluster/icon.png"
  },
  "type": "object",
  "title": "Kubernetes Cluster",
  "description": "Kubernetes cluster authentication and cloud-specific configuration.",
  "additionalProperties": false,
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "object",
      "required": [
        "authentication"
      ],
      "properties": {
        "infrastructure": {
          "title": "Cloud provider configuration",
          "description": "Cloud specific Kubernetes configuration data.",
          "type": "object",
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-eks.json"
            },
            {
              "$ref": "../types/azure-infrastructure-aks.json"
            },
            {
              "$ref": "../types/gcp-infrastructure-grn.json"
            }
          ]
        },
        "authentication": {
          "type": "object",
          "title": "Authentication",
          "description": "Authentication details required to access the Kubernetes cluster.",
          "required": [
            "cluster",
            "user"
          ],
          "properties": {
            "cluster": {
              "type": "object",
              "title": "Cluster",
              "description": "Information about the Kubernetes cluster you wish to connect to.",
              "required": [
                "server",
                "certificate-authority-data"
              ],
              "properties": {
                "server": {
                  "type": "string",
                  "title": "Server",
                  "description": "The URL or endpoint of the Kubernetes API server."
                },
                "certificate-authority-data": {
                  "type": "string",
                  "title": "Certificate Authority Data",
                  "description": "Base64-encoded certificate authority data used to verify the Kubernetes API server's certificate."
                }
              }
            },
            "user": {
              "type": "object",
              "title": "User",
              "description": "User credentials for authenticating with the Kubernetes cluster.",
              "required": [
                "token"
              ],
              "properties": {
                "token": {
                  "type": "string",
                  "title": "Token",
                  "description": "Bearer token used for authenticating the user with the Kubernetes API server."
                }
              }
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "required": [
        "kubernetes"
      ],
      "properties": {
        "kubernetes": {
          "$ref": "../specs/kubernetes.json"
        },
        "aws": {
          "$ref": "../specs/aws.json"
        },
        "azure": {
          "$ref": "../specs/azure.json"
        },
        "gcp": {
          "$ref": "../specs/gcp.json"
        }
      }
    }
  }
}
