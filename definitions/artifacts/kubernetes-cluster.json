{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "label": "Kubernetes Cluster",
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/artifact-definitions/refs/heads/main/definitions/artifacts/kubernetes-cluster/icon.png",
    "export": [
      {
        "downloadButtonText": "Kube Config",
        "fileFormat": "yaml",
        "template": "",
        "templateLang": "liquid"
      }
    ],
    "name": "kubernetes-cluster",
    "ui": {
      "environmentDefaultGroup": "credentials",
      "instructions": [
        {
          "label": "kubectl CLI",
          "content": ""
        }
      ]
    }
  },
  "type": "object",
  "title": "Kubernetes Cluster",
  "description": "Kubernetes cluster authentication and cloud-specific configuration.",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "title": "Kubernetes Cluster Configuration",
      "description": "Configure your Kubernetes cluster connection details",
      "type": "object",
      "required": [
        "authentication"
      ],
      "properties": {
        "infrastructure": {
          "title": "Cloud Provider Information",
          "description": "Optional cloud provider-specific configuration for your Kubernetes cluster. Only needed if your cluster is managed by AWS EKS, Azure AKS, or GCP GKE.",
          "type": "object",
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-eks.json"
            },
            {
              "$ref": "../types/azure-infrastructure-aks.json"
            },
            {
              "$ref": "../types/gcp-infrastructure-grn.json"
            }
          ]
        },
        "authentication": {
          "type": "object",
          "title": "Cluster Authentication",
          "description": "Connection details required to authenticate with your Kubernetes cluster",
          "required": [
            "cluster",
            "user"
          ],
          "properties": {
            "cluster": {
              "type": "object",
              "title": "Cluster Connection Details",
              "description": "Information about the Kubernetes API server you're connecting to",
              "required": [
                "server",
                "certificate-authority-data"
              ],
              "properties": {
                "server": {
                  "type": "string",
                  "title": "Kubernetes API Server URL",
                  "description": "The full URL endpoint of your Kubernetes API server (e.g., https://api.example.com:6443)"
                },
                "certificate-authority-data": {
                  "type": "string",
                  "title": "Certificate Authority Certificate",
                  "description": "Base64-encoded certificate authority (CA) certificate used to verify the Kubernetes API server's identity. This ensures you're connecting to the correct cluster."
                }
              }
            },
            "user": {
              "type": "object",
              "title": "User Authentication",
              "description": "Credentials for authenticating as a user with the Kubernetes cluster",
              "required": [
                "token"
              ],
              "properties": {
                "token": {
                  "type": "string",
                  "title": "Bearer Token",
                  "description": "Authentication token used to authenticate with the Kubernetes API server. This is typically a service account token or user token.",
                  "$md.sensitive": true
                }
              }
            }
          }
        }
      }
    },
    "specs": {
      "additionalProperties": true
    }
  }
}
