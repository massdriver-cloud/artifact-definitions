{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/aws/arch-amazon-sagemaker.svg",
    "name": "aws-sagemaker-endpoint"
  },
  "type": "object",
  "title": "AWS SageMaker Endpoint",

  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "title": "Artifact Data",
      "type": "object",
      "required": [
        "infrastructure"
      ],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure",
          "required": [
            "arn"
          ],
          "type": "object",
          "properties": {
            "arn": {
              "$ref": "../types/aws-arn.json"
            }
          }
        },
        "security": {
          "$ref": "../types/aws-security.json"
        }
      }
    },
    "specs": {
      "title": "Artifact Specs",
      "type": "object",
      "properties": {
        "aws": {
          "$ref": "../specs/aws.json"
        }
      }
    }
  }
}
