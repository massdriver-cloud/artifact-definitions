{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "importing": {
      "group": "data"
    },
    "name": "postgresql-authentication",
    "icon": "https://raw.githubusercontent.com/massdriver-cloud/icons/refs/heads/main/public/oss/postgresql.svg"
  },
  "type": "object",
  "title": "PostgreSQL Authentication",
  "description": "Authentication parameters for a PostgreSQL database",

  "required": ["data", "specs"],
  "properties": {
    "data": {
      "type": "object",

      "required": ["infrastructure", "authentication", "security"],
      "properties": {
        "security": {
          "title": "Security details",
          "description": "TBD",
          "type": "object",
          "anyOf": [
            {
              "$ref": "../types/aws-security.json"
            },
            {
              "$ref": "../types/azure-security.json"
            },
            {
              "$ref": "../types/gcp-security.json"
            }
          ]
        },
        "infrastructure": {
          "title": "Cloud provider details",
          "description": "Cloud specific PostgreSQL configuration data.",
          "type": "object",
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-arn.json"
            },
            {
              "$ref": "../types/gcp-infrastructure-name.json"
            },
            {
              "$ref": "../types/azure-infrastructure-ari.json"
            },
            {
              "$ref": "../types/k8s-application-infrastructure.json"
            }
          ]
        },
        "authentication": {
          "title": "Authentication details",
          "type": "object",
          "required": ["username", "password", "hostname", "port"],
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string",
              "$md.sensitive": true
            },
            "hostname": {
              "type": "string"
            },
            "port": {
              "$ref": "../types/port.json"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",

      "required": ["rdbms"],
      "properties": {
        "rdbms": {
          "$ref": "../specs/rdbms.json"
        },
        "aws": {
          "$ref": "../specs/aws.json"
        },
        "azure": {
          "$ref": "../specs/azure.json"
        },
        "gcp": {
          "$ref": "../specs/gcp.json"
        }
      }
    }
  }
}
