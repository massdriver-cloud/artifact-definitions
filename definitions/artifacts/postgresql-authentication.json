{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "access": "public",
    "importing": {
      "group": "data"
    },
    "name": "postgresql-authentication"
  },
  "type": "object",
  "title": "PostgreSQL Authentication",
  "description": "Authentication parameters for a PostgreSQL database",
  "additionalProperties": false,
  "required": [
    "data",
    "specs"
  ],
  "properties": {
    "data": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "infrastructure",
        "authentication",
        "security"
      ],
      "properties": {
        "security": {
          "title": "Security details",
          "description": "TBD",
          "type": "object",
          "anyOf": [
            {
              "$ref": "../types/aws-security.json"
            },
            {
              "$ref": "../types/azure-security.json"
            },
            {
              "$ref": "../types/gcp-security.json"
            }
          ]
        },
        "infrastructure": {
          "title": "Cloud provider details",
          "description": "Cloud specific PostgreSQL configuration data.",
          "type": "object",
          "oneOf": [
            {
              "$ref": "../types/aws-infrastructure-arn.json"
            },
            {
              "$ref": "../types/gcp-infrastructure-name.json"
            },
            {
              "$ref": "../types/azure-infrastructure-ari.json"
            },
            {
              "$ref": "../types/k8s-application-infrastructure.json"
            }
          ]
        },
        "authentication": {
          "title": "Authentication details",
          "type": "object",
          "required": [
            "username",
            "password",
            "hostname",
            "port"
          ],
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "hostname": {
              "type": "string"
            },
            "port": {
              "$ref": "../types/port.json"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "rdbms"
      ],
      "properties": {
        "rdbms": {
          "$ref": "../specs/rdbms.json"
        }
      }
    }
  }
}
