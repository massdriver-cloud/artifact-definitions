{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "IAM",
  "description": "IAM Policies",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-z\/-]+$": {
      "type": "object",
      "required": [
        "policy_arn"
      ],
      "properties": {
        "policy_arn": {
          "title": "Policy ARN",
          "description": "AWS IAM policy ARN",
          "$ref": "./aws-arn.json"
        }
      }
    }
  }
}
