{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "CosmosDB SQL Authentication",
  "description": "CosmosDB SQL connection string",
  "additionalProperties": false,
  "required": [
    "username",
    "password",
    "hostname",
    "port"
  ],
  "properties": {
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "hostname": {
      "$ref": "./https-url.json"
    },
    "port": {
      "$ref": "./port.json"
    }
  }
}
