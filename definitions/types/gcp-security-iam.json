{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "IAM",
  "description": "IAM Roles And Conditions",
  "additionalProperties": false,
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "required": [
        "role",
        "description"
      ],
      "properties": {
        "role": {
          "title": "Role",
          "description": "GCP Role",
          "pattern": "^roles\/[a-zA-Z\\.]+$",
          "message": {
            "pattern": "Must be a valid GCP Role, e.g. roles/..."
          },
          "examples": [
            "roles/owner",
            "roles/redis.editor",
            "roles/storage.objectCreator",
            "roles/storage.legacyObjectReader"
          ]
        },
        "condition": {
          "title": "Condition",
          "description": "GCP IAM Condition",
          "type": "string"
        },
        "description": {
          "title": "Description",
          "description": "A short description of what the role allows you to do.",
          "type": "string",
          "examples": [
            "Gives the ability to create objects in storage. Does not give permission to view, delete, or replace.",
            "Gives the ability to only view objects in storage.",
            "Read-only access to tables"
          ]
        }
      }
    }
  }
}
