{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "IAM",
  "description": "IAM Roles And Conditions",
  "additionalProperties": false,
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "required": [
        "role"
      ],
      "properties": {
        "role": {
          "title": "Role",
          "description": "GCP Role",
          "pattern": "^roles\/.*$",
          "message": {
            "pattern": "Must be a valid GCP Role, e.g. roles/..."
          }
        },
        "condition": {
          "title": "Condition",
          "description": "GCP IAM Condition",
          "type": "string"
        }
      }
    }
  }
}
