{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "Taint",
    "description": "A taint to apply to Kubernetes nodes",
    "required": [
        "taint_key",
        "taint_value",
        "effect"
    ],
    "properties": {
        "taint_key": {
            "$ref": "../types/k8s-resource-name.json",
            "title": "Key",
            "description": "Taint Key",
            "examples": [
                "workloads"
            ]
        },
        "taint_value": {
            "$ref": "../types/k8s-resource-name.json",
            "title": "Value",
            "description": "Taint Value",
            "examples": [
                "gpu"
            ]
        },
        "effect": {
            "type": "string",
            "title": "Effect",
            "default": "NO_SCHEDULE",
            "oneOf": [
                {
                    "const": "PREFER_NO_SCHEDULE",
                    "title": "Prefer No Schedule"
                },
                {
                    "const": "NO_SCHEDULE",
                    "title": "No Schedule"
                },
                {
                    "const": "NO_EXECUTE",
                    "title": "No Execute"
                }
            ]
        }
    }
}
