{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Taint",
  "description": "A taint to apply to Kubernetes nodes",
  "required": [
    "taint_key",
    "taint_value",
    "effect"
  ],
  "properties": {
    "taint_key": {
      "type": "string",
      "title": "Key",
      "description": "Taint Key",
      "pattern": "^(?:[a-z0-9]|[a-z0-9][a-z0-9-]{0,61}[a-z0-9])$",
      "message": {
        "pattern": "Name must follow RFC 1123: at most 63 characters, only lowercase alphanumeric characters or '-', and start and end with an alphanumeric character."
      },
      "examples": [
        "workloads"
      ]
    },
    "taint_value": {
      "type": "string",
      "title": "Value",
      "description": "Taint Value",
      "pattern": "^(?:[a-z0-9]|[a-z0-9][a-z0-9-]{0,61}[a-z0-9])$",
      "message": {
        "pattern": "Name must follow RFC 1123: at most 63 characters, only lowercase alphanumeric characters or '-', and start and end with an alphanumeric character."
      },
      "examples": [
        "gpu"
      ]
    },
    "effect": {
      "type": "string",
      "title": "Effect",
      "default": "NO_SCHEDULE",
      "oneOf": [
        {
          "const": "PREFER_NO_SCHEDULE",
          "title": "Prefer No Schedule"
        },
        {
          "const": "NO_SCHEDULE",
          "title": "No Schedule"
        },
        {
          "const": "NO_EXECUTE",
          "title": "No Execute"
        }
      ]
    }
  }
}
