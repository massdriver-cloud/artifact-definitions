{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://schemas.massdriver.cloud/definitions/types/elastic-authentication.json",
  "title": "Elasticsearch Authentication",
  "description": "Elasticsearch connection string",
  "additionalProperties": false,
  "required": [
    "username",
    "password",
    "hostname",
    "port"
  ],
  "properties": {
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "hostname": {
      "type": "string"
    },
    "port": {
      "$ref": "./port.json"
    }
  }
}
