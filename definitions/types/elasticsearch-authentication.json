{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Elasticsearch Authentication",
  "description": "Elasticsearch connection string",

  "required": ["username", "password", "hostname", "port"],
  "properties": {
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string",
      "$md.sensitive": true
    },
    "hostname": {
      "type": "string"
    },
    "port": {
      "$ref": "./port.json"
    }
  }
}
